@model Sieve.HR.Areas.Admin.Models.HR_DESIGNATIONS
@{
    ViewBag.Title = "Designation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-primary card-outline">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-header border-0">
            <h5 class="card-title m-0">Add/Edit @ViewBag.Title</h5>
            <div class="d-flex justify-content-end">
                <a href="@Url.Action("Index")" class="btn btn-outline-info btn-flat btn-sm"><i class="fas fa-chevron-circle-left"></i> Back</a>
                <a href="@Url.Action("Create",new {id=""})" class="btn btn-outline-primary btn-flat btn-sm"><i class="fas fa-plus-circle"></i> New</a>
                <button type="submit" class="btn btn-outline-danger btn-flat btn-sm"><i class="fas fa-save"></i> Save</button>
            </div>
        </div>
        <div class="card-body">
            @Html.HiddenFor(model=>model.ID)
            <div class="row">
                <div class="col">
                    @Html.LabelFor(model => model.SHORT_FORM, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.SHORT_FORM, new { htmlAttributes = new { @class = "form-control form-control-sm", @Placeholder = Html.DisplayNameFor(x => x.SHORT_FORM) } })
                    @Html.ValidationMessageFor(model => model.SHORT_FORM, "", new { @class = "text-danger" })
                </div>
                <div class="col">
                    @Html.LabelFor(model => model.FULL_FORM, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.FULL_FORM, new { htmlAttributes = new { @class = "form-control form-control-sm", @Placeholder = Html.DisplayNameFor(x => x.FULL_FORM) } })
                    @Html.ValidationMessageFor(model => model.FULL_FORM, "", new { @class = "text-danger" })
                </div>
                <div class="col">
                    @Html.LabelFor(model => model.PARENT_ID, htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.PARENT_ID, ViewBag.COMP_ID as List<SelectListItem>, new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(model => model.PARENT_ID, "", new { @class = "text-danger" })
                </div>
                <div class="col">
                    @Html.LabelFor(model => model.MIN_SALARY, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.MIN_SALARY, new { htmlAttributes = new { @class = "form-control form-control-sm", @Placeholder = Html.DisplayNameFor(x => x.MIN_SALARY) } })
                    @Html.ValidationMessageFor(model => model.MIN_SALARY, "", new { @class = "text-danger" })
                </div>
                <div class="col">
                    @Html.LabelFor(model => model.MAX_SALARY, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.MAX_SALARY, new { htmlAttributes = new { @class = "form-control form-control-sm", @Placeholder = Html.DisplayNameFor(x => x.MAX_SALARY) } })
                    @Html.ValidationMessageFor(model => model.MAX_SALARY, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    }
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}